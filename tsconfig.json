{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "ES2021.String",
      "dom"
    ],
    "suppressImplicitAnyIndexErrors": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "types",
    "*.ts",
    "services/**/*.ts",
    "modules/**/*.ts",
    "utils/**/*.ts",
    "package/**/*.ts",
    "demos/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

